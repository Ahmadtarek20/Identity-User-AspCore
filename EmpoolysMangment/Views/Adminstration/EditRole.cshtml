@model EditeRoleViewModel

@{
    ViewBag.Title = " Edite Role";
}

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="RoleName"></label>
        <div class="col-sm-10"> <input class="form-control" placeholder="Email" asp-for="RoleName" /></div>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-primary" style="width:auto" type="submit">Update</button>
            <a class="btn btn-danger" style="width:auto"
               asp-controller="Adminstration" asp-action="ListRole">
                Cancell
            </a>
        </div>
    </div>
    <div class="card">
        <div>
            <h3>Users in this roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">NO User </h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Adminstration" asp-action="EditUserInRole" asp-route-roleId="@Model.Id">
                Add OR Remove User
            </a>
            
        </div>
    </div>

</form>