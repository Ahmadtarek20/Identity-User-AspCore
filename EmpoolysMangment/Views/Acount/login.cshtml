@model loginViewModel


@{
    ViewBag.Title = " Login";
}

   <div class="row">
       <div class="col-md-6">
           <h2>Local Acount</h2>
           <hr />
           <form method="post" class="mt-3">
               <div asp-validation-summary="All" class="text-danger"></div>
               <div class="form-group row">
                   <label class="col-sm-2 col-form-label" asp-for="Email"></label>
                   <div class="col-sm-10"> <input class="form-control" placeholder="Email" asp-for="Email" /></div>
                   <span asp-validation-for="Email" class="text-danger"></span>
               </div>
               <div class="form-group row">
                   <label class="col-sm-2 col-form-label" asp-for="Password"></label>
                   <div class="col-sm-10"><input class="form-control" placeholder="Password" asp-for="Password" /></div>
                   <span asp-validation-for="Password" class="text-danger"></span>
               </div>
               <div class="form-group row">
                   <div class="checkbox">
                       <label class="col-sm-2 col-form-label" asp-for="RememberMe">
                           <input asp-for="RememberMe" />
                           @Html.DisplayNameFor(m => m.RememberMe)
                       </label>

                   </div>
               </div>

               <div class="form-group row">
                   <div class="col-sm-10">
                       <button class="btn btn-primary" type="submit">Login</button>
                   </div>
               </div>

           </form>
       </div>

       <div class="col-md-6">
           <h2>Extirnal login</h2>
           <hr />
           @{ 
               if(Model.ExternalLogin.Count == 0)
               {
                   <div>NO EXTIRNAL LOGS CONFIGERED</div>
               }
               else
               {
                   <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.RerernUrl">
                       <div>
                           @foreach(var provider in Model.ExternalLogin)
                           {
                               <button type="submit" class="btn btn-primary" style="width:auto"
                                       name="provider" value="@provider.Name" title="Login Use You @provider.DisplayName account">
                                   @provider.DisplayName
                               </button>
                           }
                       </div>
                   </form>
               }
           }
       </div>
   </div>