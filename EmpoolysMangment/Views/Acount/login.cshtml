@model loginViewModel


@{
    ViewBag.Title = " Login";
}

    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Email"></label>
            <div class="col-sm-10"> <input class="form-control" placeholder="Email" asp-for="Email" /></div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Password"></label>
            <div class="col-sm-10"><input class="form-control" placeholder="Password" asp-for="Password" /></div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="checkbox">
                <label class="col-sm-2 col-form-label" asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
                
            </div> 
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </div>

    </form>